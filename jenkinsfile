node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Build image') {
  
       app = docker.build("danawesomenew/tictactoe-game-web")
    }

    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }
    stage('Build Database') {
  
       database = docker.build("danawesomenew/mongo")
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub1') {
            app.push("${env.BUILD_NUMBER}")
        }
    }
    stage('Push database') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub1') {
            database.push("${env.BUILD_NUMBER}")
        }
    }
    
    stage('Trigger ManifestUpdate') {
                echo "triggering updatemanifestjob"
                build job: 'updatemanifest1', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
        }
}
